<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fix_A_Habit_Application.LoginPage"
             Title="LoginPage">
    <ScrollView>
        <VerticalStackLayout 
        Padding="30"
        Spacing="20">

            <Label 
            Text="Login"
            FontSize="32"
            FontAttributes="Bold"
            TextColor="White"
            Margin="0,60,0,30"/>

            <!-- Email Entry -->
            <Entry 
            Placeholder="Email"
            PlaceholderColor="LightGray"
            TextColor="White"
            Keyboard="Email"
            BackgroundColor="#3d8f76"
            HeightRequest="50"/>

            <!-- Password Entry -->
            <Entry 
            Placeholder="Password"
            PlaceholderColor="LightGray"
            TextColor="White"
            IsPassword="True"
            BackgroundColor="#3d8f76"
            HeightRequest="50"/>

            <!-- Forgot Password -->
            <Label 
            Text="Forgot Password?"
            TextColor="White"
            HorizontalOptions="End"
            TextDecorations="Underline"/>

            <!-- Login Button -->
            <Button 
            Text="LOGIN"
            BackgroundColor="#2d7a62"
            TextColor="White"
            FontAttributes="Bold"
            CornerRadius="25"
            HeightRequest="50"
            Margin="0,20,0,0"
            Clicked="OnLoginClicked"/>

            <!-- Sign Up Link -->
            <HorizontalStackLayout 
            HorizontalOptions="Center"
            Margin="0,20,0,0">
                <Label 
                Text="Don't have an account? "
                TextColor="White"/>
                <Label 
                Text="Sign Up"
                TextColor="White"
                FontAttributes="Bold"
                TextDecorations="Underline">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnSignUpTapped"/>
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>